---
import PostLayout from '../../layouts/PostLayout.astro';
import PostHeader from '../../components/PostHeader.astro';

import { generateStaticPaths } from '@selfyi/pkg-notion_astro/api';
import { Notion } from '@selfyi/pkg-notion_astro/components';

export async function getStaticPaths() {
  const data = await generateStaticPaths();
  return data;
}

const { post: postUrl } = Astro.params;
const { pages, pageData, blocks } = Astro.props;
---

<PostLayout pages={pages} pageData={pageData} postUrl={postUrl}>
  <article>
    <PostHeader {pageData} />
    <Notion {blocks} />
  </article>
</PostLayout>

<style lang="scss">
  article > * {
    line-height: 1.625;
  }
</style>
